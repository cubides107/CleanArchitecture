@model CleanArchitecture.Domain.Models.ProductEntities.Product

@using (Html.BeginForm("Register", "Products"))
{
    <form>
        <div class="form-group">
            <label for="name">Nombre del Producto</label>
            <input class="form-control" name="name" type="text" placeholder="Nombre de la cerveza">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>
}
